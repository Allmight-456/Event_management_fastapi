# Database Configuration
DATABASE_URL=postgresql://neofi_user:neofi_password@localhost:5432/neofi_db

# Security Configuration
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Configuration for Rate Limiting and Caching
REDIS_URL=redis://localhost:6379

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Event Management API
VERSION=1.0.0
DESCRIPTION=Collaborative Event Management System with versioning

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000,http://localhost:5173

