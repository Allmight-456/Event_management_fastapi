# Database Configuration
# Development - PostgreSQL (local Docker)
DATABASE_URL="postgresql://event_user:secure_password@localhost:5432/event_management"

# Backup - SQLite (fallback)
# DATABASE_URL="sqlite:///./event_management.db"

# Production - PostgreSQL (use a proper PostgreSQL connection)
# Option 1: Local PostgreSQL
# DATABASE_URL="postgresql://username:password@localhost:5432/event_management"

# Option 2: Railway PostgreSQL (recommended for deployment)
# DATABASE_URL="postgresql://postgres:password@containers-us-west-xyz.railway.app:5432/railway"

# Option 3: Supabase PostgreSQL
# DATABASE_URL="postgresql://postgres:password@db.xyz.supabase.co:5432/postgres"

# Option 4: Neon PostgreSQL
# DATABASE_URL="postgresql://username:password@ep-xyz.us-east-1.aws.neon.tech/neondb"

# Option 5: PlanetScale (MySQL alternative)
# DATABASE_URL="mysql://username:password@aws.connect.psdb.cloud/database-name?ssl={"rejectUnauthorized":true}"

# Security Configuration
SECRET_KEY="your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Configuration for Rate Limiting and Caching
REDIS_URL="redis://localhost:6379"
# For Railway Redis:
# REDIS_URL="redis://default:password@containers-us-west-xyz.railway.app:6379"

# For Upstash Redis (serverless):
# REDIS_URL="redis://default:password@apn1-cosmic-firefly-12345.upstash.io:6379"

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME="Event Management API"
VERSION="1.0.0"
DESCRIPTION="Collaborative Event Management System with versioning"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000,http://localhost:5173"

# Email Configuration (for notifications - future)
# SMTP_SERVER="smtp.gmail.com"
