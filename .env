# Database Configuration
DATABASE_URL="sqlite:///./event_management.db"
# For production - PostgreSQL (uncomment and configure)
# DATABASE_URL="postgresql://username:password@localhost:5432/event_management"

# Security Configuration
SECRET_KEY="your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis Configuration
# Optional Redis for Rate Limiting
# REDIS_URL="redis://localhost:6379"

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME="Event Management API"
VERSION="1.0.0"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000"

EOF

# Create .env.example for documentation (without sensitive values)
cat > .env.example << EOF
DATABASE_URL="sqlite:///./event_management.db"
SECRET_KEY="your-secret-key-here"
API_V1_STR=/api/v1
PROJECT_NAME="Event Management API"
VERSION="1.0.0"
RATE_LIMIT_PER_MINUTE=100
ENVIRONMENT=development
DEBUG=true
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000"
EOF

# Create .gitignore to prevent sensitive files from being committed
cat > .gitignore << EOF
# Environment variables
.env

# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python
env/
venv/
ENV/
env.bak/
venv.bak/

# Database
*.db
*.sqlite3

# IDE
.vscode/
.idea/
*.swp
*.swo

# OS
.DS_Store
Thumbs.db

# Logs
*.log
logs/

# Testing
.coverage
.pytest_cache/